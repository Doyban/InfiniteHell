<?xml version='1.0' encoding='utf-8'?>
<widget id="com.doyban.infinitehell" version="1.3.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>InfiniteHell</name>
    <description>InfiniteHell is a neverending hell!</description>
    <author email="contact@doyban.com" href="https://doyban.com/">Doyban</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-purchase" spec="^9.0.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.1.0" />
    <plugin name="cordova-plugin-admob-simple" spec="^3.3.8" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.6.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3">
      <preference name="StatusBarOverlaysWebView" value="false" />
      <preference name="StatusBarBackgroundColor" value="#000000" />
      <preference name="StatusBarStyle" value="blackopaque" />
    </plugin>
    <plugin name="cordova-plugin-facebook4" spec="^6.2.0">
      <params>
        <param name="APP_ID" value="611658819003576" />
        <param name="APP_NAME" value="InfiniteHell" />
      </params>
    </plugin>
</widget>
